html
  head
    title= title
  body
    form
      input(name='title')
      input(type='Submit' value='Add Todo')
    ul.todo-items
      each todo in todos
        li
          input(type='checkbox' data-todo-id=todo['todo_id'] checked=(todo['complete'] ? 'checked' : undefined))
          = todo['title'] + ': ' + todo['complete']
          a(href='#' data-todo-id=todo['todo_id']) &nbsp;delete
    script(src='jquery-3.2.0.js')
    script(src='client.js')
